<mvc:View controllerName="invoices.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content />
    </Page> 
    <Text text="Hello world"></Text> 
    <Button text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
    <Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"></Input>
</mvc:View>
