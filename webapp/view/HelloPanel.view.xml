<mvc:View
    controllerName="invoices.controller.HelloPanel"
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core">
    <Panel headerText="{i18n>panelText}" class="sapUiResponsiveMargin" width="auto"
            expandable="{device>/system/phone}" expanded="{= !${device>/system/phone} }">
        <content>
            <Button id="btnHelloDialog" icon="sap-icon://action" text="{i18n>helloDialogText}" press=".onOpenDialog" 
            class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"/>
            <Button id="btnHelloDialog2" icon="sap-icon://action" press=".onOpenDialog" 
            class="sapUiSmallMarginEnd sapUiHideOnDesktop"/>
            <Button id="btnHelloMsg" icon="sap-icon://hello-world" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="invoices.view.Form01" type="XML"/>
</mvc:View>
