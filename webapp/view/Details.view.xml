<mvc:View
    controllerName="invoices.controller.Details" displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:alfa="invoices.control"> 
    <Page id="page" title="{i18n>detailsPageTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <ObjectHeader title="{i18n>detailsPageTitle}"
                responsive="true" fullScreenOptimized="true">
            <attributes>
                <ObjectAttribute text="{invoices>ProductName}"/>
                <ObjectAttribute text="{invoices>Quantity}"/>
                <ObjectAttribute text="{invoices>ExtendedPrice}"/>
                <ObjectAttribute text="{invoices>ShipperName}"/>
                <ObjectAttribute text="{invoices>ShippedDate}"/>
                <ObjectAttribute text="{invoices>Status}"/>
            </attributes>
        </ObjectHeader>
        <alfa:ProductRating id="rating" class="sapUiSmallMarginBeginEnd" change=".onRatingChange"/>
    </Page>
</mvc:View>
